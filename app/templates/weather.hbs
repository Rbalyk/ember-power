<div class="weathers">
    <h2>Weather API</h2>
    <p>Simple way to work with weather API <a href="https://openweathermap.org/api" target="_blank">openweathermap.org/api</a>
    </p>
    <div class="row">

        {{#each model as |weatherCityOption|}}
            <div class="col-md-3">
                <div class="main">
                    <p><b>Country:</b> {{weatherCityOption.sys.country}}</p>
                    <p><b>City:</b> {{weatherCityOption.name}} </p>
                    <p><b>Temperature:</b> {{weatherCityOption.main.temp}}&#x2103;</p>
                </div>
            </div>
        {{/each}}


    </div>
</div>
{{outlet}}

